	<Phone>1-123-456-7890</Phone>
	<ShippingInstructions>Ground</ShippingInstructions>
	<OrderComments>These comments will appear on the packing slip. Max 255 chars.</OrderComments>
	<Approve>1</Approve>
	<Item>
		<ItemID>testitem</ItemID>
		<ItemQty>2</ItemQty>
	</Item>
